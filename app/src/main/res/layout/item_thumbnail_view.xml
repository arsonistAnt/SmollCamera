<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/not_quite_black"
            android:layout_height="wrap_content">
        <FrameLayout
                android:layout_width="0dp"
                android:id="@+id/image_view_frame"
                android:background="@color/not_quite_black"
                app:layout_constraintDimensionRatio="4:4"
                tools:ignore="ContentDescription" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="3dp"
                android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                    android:id="@+id/image_card"
                    android:background="@color/not_quite_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:cardCornerRadius="8dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:background="@color/not_quite_black"
                        android:layout_height="match_parent" app:srcCompat="?attr/colorError"
                        android:id="@+id/thumbnail_view"
                        android:visibility="visible"/>
            </androidx.cardview.widget.CardView>


        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>